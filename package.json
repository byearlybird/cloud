{
	"name": "starling-server",
	"version": "0.1.0",
	"description": "A secure, production-ready server for Starling password manager with JWT authentication and encrypted storage",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/byearlybird/starling-server.git"
	},
	"author": "byearlybird",
	"keywords": [
		"starling",
		"password-manager",
		"bun",
		"typescript",
		"authentication",
		"jwt",
		"hono",
		"encrypted-storage"
	],
	"homepage": "https://github.com/byearlybird/starling-server#readme",
	"bugs": {
		"url": "https://github.com/byearlybird/starling-server/issues"
	},
	"scripts": {
		"dev": "bun --hot src/index.tsx",
		"start": "NODE_ENV=production bun src/index.tsx",
		"build": "bun run build.ts",
		"test": "bun test",
		"lint": "bunx @biomejs/biome check .",
		"format": "bunx @biomejs/biome format --write ."
	},
	"dependencies": {
		"@byearlybird/starling": "^0.9.3",
		"@hono/zod-validator": "^0.7.4",
		"bun-plugin-tailwind": "^0.1.2",
		"hono": "^4.10.4",
		"react": "^19",
		"react-dom": "^19",
		"tailwindcss": "^4.1.11",
		"ts-results": "^3.3.0",
		"tslib": "^2.8.1",
		"unstorage": "^1.17.2",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@types/bun": "latest",
		"@types/react": "^19",
		"@types/react-dom": "^19"
	}
}
