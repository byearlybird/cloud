{
	"name": "@byearlybird/cloud",
	"version": "0.4.0",
	"description": "Zero-knowledge sync server with auth and end-to-end encryption",
	"type": "module",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build:types": "tsc -p tsconfig.build.json",
		"prepublishOnly": "bun run build:types",
		"dev": "bun --hot src/app/app.ts",
		"start": "NODE_ENV=production bun src/app/app.ts",
		"test": "bun test",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"version:patch": "bun pm version patch",
		"version:minor": "bun pm version minor",
		"version:major": "bun pm version major",
		"publish": "bun publish --access public"
	},
	"dependencies": {
		"@byearlybird/starling": "^0.12.0",
		"drizzle-orm": "^1.0.0-beta.2-b782ae1",
		"hono": "^4.10.4",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@libsql/client": "^0.15.15",
		"@types/bun": "latest",
		"drizzle-kit": "^1.0.0-beta.2-b782ae1",
		"typescript": "^5.6.0"
	},
	"peerDependencies": {
		"hono": "^4.10.4"
	}
}
